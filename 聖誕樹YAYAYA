// ConsoleApplication1.cpp : 定義主控台應用程式的進入點。
//

#include "stdafx.h"
#include "stdio.h"


int main()
{
	int num;
	int i;
	int j = 0;
	int k = 0;
	int l = 0;

	puts("Please an number!!");
	scanf_s("%d", &num);

	for (i = 0; i < num; i++)
	{
		j = 0;
		for (l, k = num - l; k > 0; k--)
		{
			printf(" ");
		}
		while (j < i * 2 + 1)
		{
			printf("*");

			j++;
		}
		puts("");

		l++;
	}
}
