


// ConsoleApplication1.cpp : 定義主控台應用程式的進入點。
//

#include "stdafx.h"
#include "stdlib.h"
#include <string.h>



int main()
{
	
	char phoneNumber[20];
	char *tokenPtr ;
	int areaNum = 0;
	int i = 0;
	int c = 0;
	long phoneNum = 0;
	

	puts("Please enter the phone number in the form ( 555 ) 555-5555");

	while( i < 19 && ( c = getchar()) !=  '\n' )
	{


		phoneNumber[i++] = c ;

	}

	tokenPtr = strtok( phoneNumber , "() -"  );

	while( tokenPtr != NULL )
	{


		printf( "%s\n" , tokenPtr);
		tokenPtr = strtok( NULL, " ");

	}
		


	puts("The int area number is : ");
	puts("The long phone number is :");
}
