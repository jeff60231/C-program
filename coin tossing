// ConsoleApplication1.cpp : 定義主控台應用程式的進入點。
//

#include "stdafx.h"
#include <stdio.h>
#include <stdlib.h>


int flip();

int main(void)
{
	flip();
}

int flip(void)
{
	int times[2] = {0};
	
	int i;
	for(i= 0  ; i <= 99 ; i++ )
		{
		int rolling =  1 + rand() % 2;
		if(rolling == 1)
			{
				times[0]++;
			}
		
		}
	printf( "Heads: %d\n",times[0]);
	printf( "Tails: %d\n",  100 - times[0]);
	return 0 ;
}

