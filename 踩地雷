// bumpUP.cpp : 定義主控台應用程式的進入點。
//

#include "stdafx.h"
#include <stdlib.h>
#include <time.h>
#include <stdio.h>

int main()
{
	int bump = 0;
	int i = 0;
	int set = 0;
	srand (time (NULL));

	int bumpArray[100]  = {0};

	i = rand() % 10 + 21 ;
	
	while( set < i )
	{
		bump = rand() % 100;
		bumpArray[bump] = 9; 


		set ++;
	}

	

	for(i = 0 ; i < 100 ; i++)
	{
		if(bumpArray[i] >= 9 )
		{
			bumpArray[i - 9] ++; 
			bumpArray[i - 10] ++;
			bumpArray[i - 11] ++;
			bumpArray[i - 1] ++;
			bumpArray[i + 1] ++;
			bumpArray[i + 9] ++;
			bumpArray[i + 10] ++;
			bumpArray[i + 11] ++;
			
		}
	}

	for(i = 0; i < 100; i++)
	{

		if(bumpArray[i] == 0)
		{
			printf("_ ");
		}
		else if(bumpArray[i] == 1)
		{
			printf("1 ");
		}
		else if(bumpArray[i] == 2)
		{
			printf("2 ");
		}
		else if(bumpArray[i] == 3)
		{
			printf("3 ");
		}
		else if(bumpArray[i] == 4)
		{
			printf("4 ");
		}
		else if(bumpArray[i] == 5)
		{
			printf("5 ");
		}
		else if(bumpArray[i] == 6)
		{
			printf("6 ");
		}
		else if(bumpArray[i] == 7)
		{
			printf("7 ");
		}
		else if(bumpArray[i] == 8)
		{
			printf("8 ");
		}
		else if(bumpArray[i] >= 9)
		{
			printf("@ ");
		}
		
		if(i % 10 == 9)
			puts(" ");

	}


}
